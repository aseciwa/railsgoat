      ['Current Date', 'Days Earned', 'Days Taken', 'Days Remaining'],
      [ <%= "As of today: #{Date.today}".inspect.html_safe %>, <%= @pto.pto_earned %>,  <%= @pto.pto_taken %>, <%= @pto.pto_days_remaining %> ], ]);

